{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Spiegel",
  "version": "0.1.0",
  "identifier": "com.spiegel.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Spiegel",
        "minWidth": 400,
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "index.html",
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}